          <!-- Modal -->
          <div id="clientModal" class="fixed inset-0 bg-black/50 hidden items-center justify-center z-50">
            <div class="bg-white p-8 rounded-2xl shadow-xl max-w-lg w-full transform scale-95 opacity-0 transition-all duration-300 relative">
              <button class="absolute top-4 right-6 text-gray-500 hover:text-gray-900 text-2xl" id="closeModal">&times;</button>
              <img id="modalLogo" src="" alt="" class="mx-auto h-20 object-contain mb-4">
              <h3 id="modalTitle" class="text-2xl font-bold text-center text-indigo-600 mb-2"></h3>
              <p id="modalContent" class="text-gray-600 text-center text-lg"></p>
            </div>
          </div>
          
          <style>
            @keyframes fade-in { 0% {opacity:0;transform:translateY(20px);} 100% {opacity:1;transform:translateY(0);} }
            @keyframes slide-up { 0% {opacity:0;transform:translateY(40px);} 100% {opacity:1;transform:translateY(0);} }
            .animate-fade-in { animation: fade-in 1s ease-in-out forwards; }
            .animate-slide-up { animation: slide-up 1s ease-in-out forwards; }
            .client-item { cursor:pointer; transition:color 0.2s ease, transform 0.2s ease; }
            .client-item:hover { color:#4f46e5; transform:scale(1.03); }
            #clientModal.active { display:flex; }
            #clientModal.active > div { opacity:1; transform:scale(1); }
          </style>
          
          <script>
            const modal = document.getElementById("clientModal");
            const modalTitle = document.getElementById("modalTitle");
            const modalContent = document.getElementById("modalContent");
            const modalLogo = document.getElementById("modalLogo");
            const closeModalBtn = document.getElementById("closeModal");
          
            document.querySelectorAll(".client-item").forEach(item => {
              item.addEventListener("click", () => {
                modalTitle.textContent = item.dataset.client;
                modalContent.textContent = item.dataset.desc || "Details coming soon.";
                modalLogo.src = item.dataset.logo || "";
                modal.classList.add("active");
              });
            });
          
            closeModalBtn.addEventListener("click", () => modal.classList.remove("active"));
            modal.addEventListener("click", e => { if (e.target === modal) modal.classList.remove("active"); });
            document.addEventListener("keydown", e => { if (e.key === "Escape") modal.classList.remove("active"); });
          </script>
          

