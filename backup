<div id="teamModal" class="fixed inset-0 bg-black/50 hidden items-center justify-center z-50">
    <div class="bg-white p-10 rounded-3xl shadow-2xl max-w-lg w-full transform scale-95 opacity-0 transition-all duration-300 relative">
      <button class="absolute top-4 right-6 text-gray-400 hover:text-gray-700 text-3xl font-bold" id="closeTeamModal">&times;</button>
  
      <div class="flex flex-col items-center text-center space-y-4">
        <div class="relative">
          <div class="absolute -inset-1 rounded-full bg-gradient-to-r from-indigo-500 via-purple-500 to-pink-500 opacity-30 blur"></div>
          <img id="teamModalPhoto" src="" alt="" class="relative mx-auto h-28 w-28 rounded-full object-cover border-4 border-secondary shadow-xl">
        </div>
        <h3 id="teamModalName" class="text-2xl font-extrabold text-gray-800"></h3>
        <p id="teamModalTitle" class="text-gray-500 font-semibold text-sm tracking-wide uppercase"></p>
        <p id="teamModalBio" class="text-gray-600 text-lg leading-relaxed"></p>
      </div>
    </div>
  </div>
  
  <style>
    /* Modal visible state */
    #teamModal.active { display:flex; }
    #teamModal.active > div { 
      opacity:1; 
      transform:scale(1);
      transition:opacity 0.4s ease, transform 0.4s ease;
    }
  
    /* Add a slight fade-in for the background */
    #teamModal.active { animation: fadeInBg 0.3s ease forwards; }
    @keyframes fadeInBg {
      from { background-color: rgba(0,0,0,0); }
      to { background-color: rgba(0,0,0,0.5); }
    }
  
    /* Better spacing for content */
    #teamModal p { max-width: 90%; margin: 0 auto; }
  </style>
<script>
    const teamModal = document.getElementById("teamModal");
    const teamModalPhoto = document.getElementById("teamModalPhoto");
    const teamModalName = document.getElementById("teamModalName");
    const teamModalTitle = document.getElementById("teamModalTitle");
    const teamModalBio = document.getElementById("teamModalBio");
    const closeTeamModalBtn = document.getElementById("closeTeamModal");
  
    document.querySelectorAll(".team-member").forEach(member => {
      member.addEventListener("click", () => {
        teamModalPhoto.src = member.dataset.photo;
        teamModalName.textContent = member.dataset.name;
        teamModalTitle.textContent = member.dataset.title;
        teamModalBio.textContent = member.dataset.bio;
        teamModal.classList.add("active");
      });
    });
  
    closeTeamModalBtn.addEventListener("click", () => teamModal.classList.remove("active"));
    teamModal.addEventListener("click", e => { if (e.target === teamModal) teamModal.classList.remove("active"); });
    document.addEventListener("keydown", e => { if (e.key === "Escape") teamModal.classList.remove("active"); });
  </script>
    


